@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Models.PublishedContent
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Value("pageTitle")</title>
    <link rel="sitemap" type="application/xml" title="Sitemap" href="/sitemap.xml">
    <link rel="stylesheet" href="/css/site.css">
</head>
<body>
    @Html.Partial("~/Views/Partials/Navigation.cshtml")
    <div class="page-wrapper">
        <!-- Blog Header -->
        <section class="blog-header">
            <div class="container">
                <h1>@Model.Value("pageTitle")</h1>
                @if (Model.HasValue("introduction"))
                {
                    <p class="blog-intro">@Model.Value("introduction")</p>
                }
            </div>
        </section>

        <!-- Blog List -->
        <section class="blog-list">
            <div class="container">
                @{
                    var blogPosts = Model.Children().Where(x => x.IsVisible()).OrderByDescending(x => x.HasValue("publishDate") ? x.Value<DateTime>("publishDate") : DateTime.MinValue);
                }
                @if (blogPosts.Any())
                {
                    <div class="blog-grid">
                        @foreach (var post in blogPosts)
                        {
                            <article class="blog-card">
                                @if (post.HasValue("featuredImage"))
                                {
                                    var image = post.Value<IPublishedContent>("featuredImage");
                                    if (image != null)
                                    {
                                        <div class="blog-card-image">
                                            <a href="@post.Url()">
                                                <img src="@image.Url()" alt="@post.Value("pageTitle")" />
                                            </a>
                                        </div>
                                    }
                                }
                                <div class="blog-card-content">
                                    <h2><a href="@post.Url()">@post.Value("pageTitle")</a></h2>
                                    <div class="blog-meta">
                                        @if (post.HasValue("publishDate"))
                                        {
                                            <span class="blog-date">@(post.Value<DateTime>("publishDate").ToString("MMMM dd, yyyy"))</span>
                                        }
                                        @if (post.HasValue("author"))
                                        {
                                            <span class="blog-author">by @post.Value("author")</span>
                                        }
                                    </div>
                                    @if (post.HasValue("excerpt"))
                                    {
                                        <p class="blog-excerpt">@post.Value("excerpt")</p>
                                    }
                                    @if (post.HasValue("tags"))
                                    {
                                        var tags = post.Value<string[]>("tags");
                                        if (tags != null && tags.Any())
                                        {
                                            <div class="blog-tags">
                                                @foreach (var tag in tags)
                                                {
                                                    <span class="tag">@tag</span>
                                                }
                                            </div>
                                        }
                                    }
                                    <a href="@post.Url()" class="read-more">Read More →</a>
                                </div>
                            </article>
                        }
                    </div>
                }
                else
                {
                    <p class="no-posts">No blog posts available yet. Check back soon!</p>
                }
            </div>
        </section>
    </div>
</body>
</html>