@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = null;
    var blogPosts = Model.Children().Where(x => x.IsVisible()).OrderByDescending(x => x.CreateDate);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.Value("pageTitle")</title>
    <meta name="description" content="@Model.Value("seoMetaDescription")" />
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    @await Html.PartialAsync("~/Views/Partials/Navigation.cshtml")
    
    <main>
        <section class="page-header">
            <div class="container">
                <h1>@Model.Value("pageTitle")</h1>
                @if (Model.HasValue("introduction"))
                {
                    <p class="page-intro">@Model.Value("introduction")</p>
                }
            </div>
        </section>

        <section class="blog-list">
            <div class="container">
                @if (blogPosts.Any())
                {
                    <div class="blog-grid">
                        @foreach (var post in blogPosts)
                        {
                            <article class="blog-card">
                                <div class="blog-card-content">
                                    <time class="blog-date">@post.CreateDate.ToString("MMMM dd, yyyy")</time>
                                    <h2><a href="@post.Url()">@post.Name</a></h2>
                                    @if (post.HasValue("excerpt"))
                                    {
                                        <p class="blog-excerpt">@post.Value("excerpt")</p>
                                    }
                                    <a href="@post.Url()" class="read-more">Read More →</a>
                                </div>
                            </article>
                        }
                    </div>
                }
                else
                {
                    <p class="no-posts">No blog posts yet. Check back soon!</p>
                }
            </div>
        </section>
    </main>

    <footer>
        <div class="container">
            <p>&copy; @DateTime.Now.Year AI Blog. Built with Umbraco.</p>
        </div>
    </footer>
</body>
</html>