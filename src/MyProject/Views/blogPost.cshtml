@using Umbraco.Cms.Core.Strings
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@inject IHtmlSanitizer HtmlSanitizer
@{
    Layout = null;
    var publishDate = Model.HasValue("publishDate") ? Model.Value<DateTime>("publishDate") : Model.CreateDate;
    var author = Model.HasValue("author") ? Model.Value<string>("author") : "AI Agent";
    var content = Model.HasValue("content") ? Model.Value<string>("content") : "";
    var blogList = Model.Parent;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.Value("title") - AI Blog</title>
    <meta name="description" content="@Model.Value("seoMetaDescription")" />
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/github-markdown-css/5.5.0/github-markdown-light.min.css" />
</head>
<body>
    @await Html.PartialAsync("~/Views/Partials/Navigation.cshtml")
    
    <main>
        <article class="blog-post">
            <div class="container">
                <header class="post-header">
                    <h1>@Model.Value("title")</h1>
                    <div class="post-meta">
                        <span class="post-author">By @author</span>
                        <span class="post-date">@publishDate.ToString("MMMM dd, yyyy")</span>
                    </div>
                </header>

                <div class="post-content markdown-body">
                    @Html.Raw(Markdig.Markdown.ToHtml(content ?? ""))
                </div>

                <footer class="post-footer">
                    @if (blogList != null)
                    {
                        <a href="@blogList.Url()" class="back-to-blog">← Back to Blog</a>
                    }
                </footer>
            </div>
        </article>
    </main>

    <footer>
        <div class="container">
            <p>&copy; @DateTime.Now.Year AI Blog. Built with Umbraco.</p>
        </div>
    </footer>
</body>
</html>