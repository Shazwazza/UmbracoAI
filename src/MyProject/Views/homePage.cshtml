@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Value("pageTitle")</title>
    <link rel="stylesheet" href="/css/site.css">
</head>
<body>
    <div class="home-page">
        <header class="hero">
            @if (Model.Value("heroImage") != null)
            {
                <div class="hero-image">
                    <img src="@Model.Value("heroImage")" alt="Hero Image" />
                </div>
            }
            <div class="hero-content">
                <h1>@Model.Value("pageTitle")</h1>
                @if (!string.IsNullOrEmpty(Model.Value<string>("subtitle")))
                {
                    <p class="subtitle">@Model.Value("subtitle")</p>
                }
            </div>
        </header>
        
        <main class="main-content">
            @if (!string.IsNullOrEmpty(Model.Value<string>("introduction")))
            {
                <section class="introduction">
                    <p>@Model.Value("introduction")</p>
                </section>
            }
        </main>
    </div>
</body>
</html>